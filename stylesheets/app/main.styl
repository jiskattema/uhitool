// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import 'footer'


// your styles here:
body
  background: white

// color for brush
rect.extent
  fill: rgba(125,125,125,0.4)

// histogram bars:
rect.bar.deselected
  fill: #c5dded

rect.bar.selected
  fill: #1f77b4

// datatable
div.table
  overflow-x: scroll


// pie slices:
g.pie-slice.deselected
  opacity: 0.2

.widgetframe
  min-height: 350px

.fullwidth
  width: 100%

.mdl-text-field
  font-size: large


// image card: 
// https://www.getmdl.io/components/index.html#cards-section

#uploadBtn
    position: absolute
    left: 0
    top: 0
    clip: rect(0px 0px 0px 0px)

.card-wide > .mdl-card__title
  color: #fff
  height: 176px

.card-wide > .mdl-card__menu
  color: #fff


.sessionupload
    background: lightblue url('./images/upload.svg') no-repeat center

.sessiondownload
    background: lightblue url('./images/download.svg') no-repeat center

.startdemo
    background: lightblue url('./images/demo.svg') no-repeat center
